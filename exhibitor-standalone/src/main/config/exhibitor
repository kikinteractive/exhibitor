EXHIBITOR_HOME=/opt/exhibitor
EXHIBITOR_PID=/var/run/exhibitor.pid
EXHIBITOR_LOG_FILE=/opt/exhibitor/log/exhibitor.out
EXHIBITOR_USER="nobody"
EXHIBITOR_OPTS="-Xms512M -Xmx512M \
    -Dcom.sun.management.jmxremote \
    -Dcom.sun.management.jmxremote.port=19050 \
    -Dcom.sun.management.jmxremote.authenticate=false \
    -Dcom.sun.management.jmxremote.ssl=false \
    -Djava.rmi.server.hostname=`curl -s -m 1 http://169.254.169.254/latest/meta-data/public-hostname`"
EXHIBITOR_OPTS="$EXHIBITOR_OPTS -XX:+UseParNewGC -XX:+UseConcMarkSweepGC -XX:+CMSParallelRemarkEnabled"

